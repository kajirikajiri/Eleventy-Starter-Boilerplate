<script>
  const selectElement = document.querySelector('select.pagination-jump')
  selectElement.addEventListener('change', function(){
    const index = this.selectedIndex
    const href = getHrefTarget(index)
    location.href = href
  })
  const pageNumberList = [...Array(Number("<%= paginationSize - 1 %>")).keys()].map(i => ++i)
  pageNumberList.forEach(n=>{
    const optionElement = document.createElement('option')
    optionElement.innerText = n
    selectElement.appendChild(optionElement)
  })

  function getHrefTarget(pageNumber){
    if (pageNumber === 1) {
      return '/'
    }else{
      return '/page' + pageNumber
    }
  }
</script>